<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.eafit.contratools"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.eafit.escaner.ZBarScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Escaner"
            android:label="@string/title_activity_escaner" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".Registro"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name=".Herramientas"
            android:label="@string/title_activity_herramientas" >
        </activity>
        <activity
            android:name=".NuevaHerramienta"
            android:label="@string/title_activity_nueva_herramienta" >
        </activity>
        <activity
            android:name=".Empleados"
            android:label="@string/title_activity_empleados" >
        </activity>
        <activity
            android:name=".NuevoEmpleado"
            android:label="@string/title_activity_nuevo_empleado" >
        </activity>
        <activity
            android:name=".InformacionEmpleado"
            android:label="@string/title_activity_informacion_empleado" >
        </activity>
        <activity
            android:name=".EmpleadoHerramientas"
            android:label="@string/title_activity_empleado_herramientas" >
        </activity>
    </application>

</manifest>